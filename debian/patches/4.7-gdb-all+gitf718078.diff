+		else if(info[i] == "IO Priority")
+			d->ioprioColumn = i;
+	    }
+	    d->havePsInfo = true;
+	    break;
+	}
+        case Ps:
+	    d->lastAnswer = answer;
+	    if(!d->havePsInfo) return;  //Not setup yet.  Should never happen
+	    emit processesUpdated();
+	case FreeMemory:
+            if(answer.isEmpty()) return; //Invalid data
