+            break;
+      case (SCHED_RR):
+	    process->scheduler = KSysGuard::Process::RoundRobin;
+            break;
+      case (SCHED_FIFO):
+	    process->scheduler = KSysGuard::Process::Fifo;
+            break;
+#ifdef SCHED_IDLE
+      case (SCHED_IDLE):
+	    process->scheduler = KSysGuard::Process::SchedulerIdle;
+#endif
+#ifdef SCHED_BATCH
+      case (SCHED_BATCH):
+	    process->scheduler = KSysGuard::Process::Batch;
+            break;
+#endif
